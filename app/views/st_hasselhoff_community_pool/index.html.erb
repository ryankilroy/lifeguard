<h1 class='txt-c'>Welcome to the St. Hasselhoff Environment Pool (SHEP)</h1>
<h2>Ready</h2>
<table class="table table-data table-light">
  <thead>
    <tr>
      <th>Environment</th>
      <th>IAAS</th>
      <th>PCF Version</th>
      <th>Ops Manager</th>
    </tr>
  </thead>
  <tbody>
    <% @ready_envs.each do |env| %>
      <tr>
        <td><%= env.name %></td>
        <td><%= env.iaas %></td>
        <td><%= env.om_version %></td>
        <td><%= env.ops_mgr_url %></td>
      </tr>
    <% end %>
  </tbody>
</table>
