<h1 class='txt-c'>Welcome to the St. Hasselhoff Environment Pool (SHEP)</h1>
<h2>Ready</h2>
<table class="table table-data table-light">
  <thead>
    <tr>
      <th>Environment</th>
      <th>IAAS</th>
      <th>PCF Version</th>
    </tr>
  </thead>
  <tbody>
    <% @ready_envs.each do |env| %>
      <tr>
        <td><%= env.name %></td>
        <td><%= env.iaas %></td>
        <td><%= env.om_version %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<h2>Grounded</h2>
<table class="table table-data table-light">
  <thead>
    <tr>
      <th>Environment</th>
      <th>IAAS</th>
      <th>PCF Version</th>
      <th>Team</th>
    </tr>
  </thead>
  <tbody>
    <% @grounded_envs.each do |env| %>
      <tr>
        <td>
          <a href="/env/<%= env.name %>"><%= env.name %></a>
        </td>
        <td><%= env.iaas %></td>
        <td><%= env.om_version %></td>
        <td><%= env.team %></td>
      </tr>
    <% end %>
  </tbody>
</table>
